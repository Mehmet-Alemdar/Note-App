<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#171717"
    android:orientation="vertical"
    tools:context=".MainActivity2">


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/linearNoteBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <ImageButton
            android:id="@+id/imageButtonBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_gravity="left"
            android:onClick="back"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:background="#171717"
            />
        <ImageButton
            android:id="@+id/imageButtonShare"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="130dp"
            android:background="#171717"
            android:onClick="shareClick"
            android:src="@drawable/ic_baseline_share_24"
            />
        <ImageButton
            android:id="@+id/imageButtonVoice"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="90dp"
            android:background="#171717"
            android:onClick="voiceClick"
            android:src="@drawable/ic_baseline_keyboard_voice_24"
            />

        <ImageButton
            android:id="@+id/imageButtonDelete"
            android:onClick="deleteBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="50dp"
            android:src="@drawable/ic_baseline_delete_24"
            android:background="#171717"
            />
        <ImageButton
            android:id="@+id/imageButtonSave"
            android:onClick="saveOrUpdateClick"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_outline_save_24"
            android:background="#171717"
            />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <EditText
        android:id="@+id/editTextTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:hint="Başlık"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#ABABAB"
        android:textSize="24dp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/editTextNote"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:fontFamily="serif"
        android:freezesText="true"
        android:gravity="start"
        android:hint="Not Alın...."
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#ABABAB"
        android:textSize="18dp" />


</LinearLayout>